<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.TextAppearance.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Caption" parent="TextAppearance.AppCompat.Caption">

    </style>

    <style name="AppTheme.TextAppearance.Search.Bold" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.Search.Light" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/md_grey_400</item>
    </style>

    <style name="AppTheme.TextAppearance.List.CheckableItem" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@drawable/checkable_list_item_text_color</item>
    </style>

    <style name="AppTheme.TextAppearance.CustomTab" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <!--<item name="tabSelectedTextColor"></item>-->
        <item name="android:textStyle">normal</item>
    </style>



</resources>
